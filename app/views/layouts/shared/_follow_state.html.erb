  <%# if current_user != user && !current_user.followings.include?(user) && !current_user.waiting_followings.include?(user) %>
    <%# button_to "Follow", follow_path(user_id: user.id), method: :post, class:"btn btn-primary", data: {turbo: 'false'}%>
  <%# end %>
<%# end %>

<%= turbo_frame_tag "user#{user.id}follows" do %>
  <% if current_user != user && !current_user.followings.include?(user)%>
