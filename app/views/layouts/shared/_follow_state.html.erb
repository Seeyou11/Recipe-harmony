<%= turbo_frame_tag "user#{user.id}follows" do %>
  <% if current_user.followings.include?(user) %>
    <%= button_to "Unfollow", unfollow_path(user_id: user.id), method: :delete, class:"btn btn-danger", data: {turbo: 'false'}%>
  <% end %>
<% end %>

