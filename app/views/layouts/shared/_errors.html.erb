<% if obj.present? && obj.errors.any? %>
  <div class="ui negative message">
    <i class="close icon"></i>
    <div class="header">
      <%= pluralize(obj.errors.count, "error") %> prohibited this <%= obj.class.name.downcase %> from being saved:
    </div>
    <ul class="list">
      <% obj.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
