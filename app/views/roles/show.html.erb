<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 700px;">
    <div class="card-header">
      <h2><%= @role.name %></h2>
    </div>
    <div class="card-body">
      <h2>Permissions:</h2>
      <ul>
        <% @permissions.each do |permission| %>
          <li><%= "#{permission.subject_class} - #{permission.action}" %></li>
        <% end %>
      </ul>
    </div>
    <div class="card-footer d-flex">
      <%= link_to 'Edit', edit_role_path(@role), class: 'btn btn-primary', style: 'margin-right: 10px;' %>
      <%= button_to 'Delete role', @role, method: :delete, class: 'btn btn-danger', data: { turbo_confirm: 'Are you sure you want to delete this role?' } %>

    </div>
  </div>
</div>
