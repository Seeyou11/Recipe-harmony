<div class="container">
  <div class="row mt-5 mb-2">
    <%# <div class="col">
      <h1>Roles</h1>
    </div> %>
    <div class="col text-end">
      <%= link_to "New role", new_role_path, class: "btn btn-warning" %>
    </div>
  </div>
  <table class="table table-bordered table-hover">
    <thead class="table-dark ">
      <tr>
        <th scope="col">Role Name</th>
        <th scope="col">Users Found</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= link_to role.name, role_path(role) %></td>
          <td><%= role.users.count %></td>
          <td>
            <div class="d-flex">
              <%= link_to edit_role_path(role), class: 'me-2' do %>
                <i class="fas fa-edit text-primary"></i>
              <% end %>
              <%= link_to role_path(role), method: :delete, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to delete this role?" } do %>
                <i class="fas fa-trash text-danger"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
